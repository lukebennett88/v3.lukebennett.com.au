{
	"$schema": "https://turbo.build/schema.json",
	"globalDependencies": ["**/.env.*local"],
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"outputs": [".next/**", "!.next/cache/**"]
		},
		"check:types": {
			"dependsOn": ["^build"],
			"outputs": ["tsconfig.tsbuildinfo"]
		},
		"dev": {
			"cache": false,
			"persistent": true
		}
	}
}
